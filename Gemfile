source 'http://rubygems.org'

# Rails
gem 'rails', '3.2.0'

# Accounts from phpbb
gem 'mysql'
gem 'tzinfo'

gem 'icalendar'

# Battle.net api
gem 'battlenet'

# Web Server
gem 'unicorn'
gem 'thin'

# Haml and Sass
gem 'haml'
gem 'slim'

gem 'thin'
gem 'airbrake'

# jQuery
gem 'jquery-rails'

# Authorization
gem 'cancan'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'yui-compressor'
  gem 'awesome_print', :git => 'git@github.com:Kelsin/awesome_print.git'
end

group :development do
  gem 'capistrano'
  gem 'capistrano-ext'
  gem 'sqlite3'
end
