<tr id="raid_<%= raid.id %>" class="<%= cycle("even", "odd") %>">
  <td class="raidname"><b><%= link_to(raid.to_s, raid_url(raid.id)) %></b></td>
  <td><%= raid.date.to_s(:raid) %></td>
  <td>Level
    <% if raid.min_level == raid.max_level -%>
      <%= raid.min_level %>
    <% else -%>
      <%= raid.min_level %>-<%= raid.max_level %>
    <% end -%>
    <% if raid.instance.requires_key %><br/>Key Required<% end %>
  </td>
  <td>
    <% raid.needed.each do |slot, num| %>
      <%= num %> <%= slot.to_s_html %><br/>
    <% end %>
  </td>
  <td>
    <% if @current_account.can_edit(raid) %>
      <span id="loader_<%= raid.id %>">
        <%= link_to_remote "Delete",
            :url => raid_url(raid),
            :confirm=>"Are you sure you want to delete #{raid}?",
            :method => :delete, 
            :loading => update_page{|page| 
                page["loader_#{raid.id}"].replace_html image_tag("loading.gif")
            } %>
      </span>
    <% end %>
  </td>
</tr>
