<% account = characters %>
<% render(:layout => "shared/box",
          :locals => { :title => link_to(account.name,
                                         account_url(account))}) do %>
  <% account.active_characters.each do |character| %>
    <tr>
      <td>
        <%= link_to(render(:partial => "shared/character",
                           :object => character),
                    "#{account_url(account)}##{dom_id(character)}") %>
        <%= character.level %>
      </td>
    </tr>
  <% end %>
<% end %>
