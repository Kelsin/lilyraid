<% if flash[:notice] %><%= flash[:notice] %><% end %>

<%= render(:partial => "accounts/account",
           :object => @account) %>

<div id="characters">
  <% cache(:admin => @current_account.admin?,
           :owner => @current_account == @account) do %>
    <%= render(:partial => "characters/character",
               :collection => if @current_account == @account 
                                  @account.characters 
                              else 
                                  @account.active_characters
                              end) %>
  <% end %>
</div>

<%= render(:partial => "characters/form",
           :locals => { :character => Character.new(:account => @account) }) if @current_account == @account %>
