<% div_for(account, :class => "raid") do %>
  <h3><%= @account.name %></h3>
  <%= error_messages_for 'account', :header_message => nil, :message => nil %>
  <% form_remote_for(account) do |f| %>
    <dl>
      <dt>LJ:</dt>
      <dd>
        <%= f.text_field :lj_account %><br />
        <p class="note">
          This is just your livejournal username. For example, if your journal
          exists at "ayashi.livejournal.com", you should only enter "ayashi"
          here.
        </p>
      </dd>
      <dt>Age:</dt>
      <dd><%= f.text_field :age %></dd>
      <dt>Location:</dt>
      <dd><%= f.text_field :location %></dd>
      <dt>Bio:</dt>
      <dd><%= f.text_area :bio, :rows => 8 %></dd>
      <% if CONFIG[:auth] == 'login' %>
        <dt>Password:</dt>
        <dd><%= f.password_field :change_password %></dd>
        <dt>Confirm:</dt>
        <dd><%= f.password_field :password_confirmation %></dd>
      <% end %>
      <dt></dt>
      <dd><%= submit_tag "Save" %></dd>
    </dl>
  <% end %>
<% end %>
