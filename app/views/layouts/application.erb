<% inside_layout('master') do -%>
  <table class="menu">
    <tr>
      <% if @current_account %>
        <td>
          <%= link_to("Home", raids_url) %>
        </td>
        <td>
          <%= link_to("New Raid", new_raid_url) %>
        </td>
        <td>
          <%= link_to("Account", account_url(@current_account)) %>
        </td>
        <td>
          <%= link_to("Member List", accounts_url) %>
        </td>
        <td>
          <%= link_to("Loot", lists_url) %>
        </td>
        <td>
          <%= link_to("Calendars", :controller => "calendar", :action => "index") %>
        </td>
        <% if @current_account.admin %>
          <td>
            <%= link_to("Admin", admin_characters_url) %>
          </td>
        <% end %>
	<td>
	  <%= link_to("Forums", "http://forum.cakeordeath-guild.com") %>
	</td>
      <% end %>
    </tr>
  </table>
  <% if @current_account and @current_account.characters.size < 1 %>
    <div class="info">
      You currently have no characters created! Please head to the
      <%= link_to("Account", account_url(@current_account)) %>
      page to create some!
    </div>
  <% end %>
  <%= yield %>
<% end -%>
