<h3>Add New Character</h3>
<% form_for [:admin, @account] do |a| %>
  <p><%= a.label :name, "Account Name" %> <%= a.text_field :name %></p>
  <% fields_for @character do |c| %>
    <p><%= c.label :name, "Character Name" %> <%= c.text_field :name %></p>
    <p>
      <%= c.label :cclass %>
      <%= c.collection_select :cclass_id, Cclass.find(:all, :order => :name), :id, :name %>
    </p>
    <p>
      <%= c.label :race %>
      <%= c.collection_select :race_id, Race.find(:all, :order => :name), :id, :name %>
    </p>
    <p>
      <%= c.label :level %>
      <%= c.text_field :level, :size => 4 %>
    </p>
    <p>
      <%= c.label :guild %>
      <%= c.text_field :guild %>
    </p>
    <p><%= submit_tag "Create" %></p>
  <% end %>
<% end %>
<h3>Rename Account</h3>
<% form_tag rename_admin_accounts_url do %>
  Rename <%= select_tag(:id, options_from_collection_for_select(Account.find(:all, :order => :name), :id, :name)) %> to <%= text_field :account, :name %>
  <%= submit_tag "Rename" %>
<% end %>
<h3>Deletable Accounts</h3>
<ul>
<% @deletable.each do |account| %>
  <li><%= link_to account.name, account_url(account) %></li>
<% end %>
</ul>
